{
  "manifest_version": 3,
  "name": "WhatsApp Translator",
  "version": "0.1",
  "description": "Translate WhatsApp messages via local Flask server",
  "permissions": [
    "scripting",
    "activeTab"

  ],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "http://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"]
    }
  ]
}